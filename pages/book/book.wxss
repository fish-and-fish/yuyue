.container {
  padding: 16px;
}

.course-header {
  display: flex;
  align-items: center;
  margin-bottom: 16px;
}

.course-image {
  width: 50px;
  height: 50px;
  border-radius: 25px;
  margin-right: 16px;
}

.course-name {
  font-size: 20px;
  font-weight: bold;
}

.field {
  margin-bottom: 16px;
}

.label {
  font-size: 16px;
  margin-bottom: 8px;
}

.input {
  padding: 12px;
  border: 1px solid #ccc;
  border-radius: 8px;
}

.time-container {
  display: flex;
  flex-wrap: wrap;
}

.time-slot {
  width: 48%;
  padding: 12px;
  border: 1px solid #ccc;
  border-radius: 8px;
  margin-bottom: 8px;
  margin-right: 2%;
  text-align: center;
}

.time-slot.selected {
  border-color: #007bff;
  background-color: #e7f1ff;
}

.button {
  padding: 16px;
  border-radius: 8px;
  background-color: #007bff;
  color: #fff;
  text-align: center;
}
