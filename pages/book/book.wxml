<view class="container">
  <view class="course-header">
    <image class="course-image" src="{{courseImage}}" />
    <text class="course-name">{{courseName}}</text>
  </view>
  <view class="field">
    <text class="label">老师</text>
    <picker mode="selector" range="{{teachers}}" bindchange="bindTeacherChange">
      <view class="input">{{teacher || '请选择老师'}}</view>
    </picker>
  </view>
  <view class="field">
    <text class="label">日期</text>
    <picker mode="date" bindchange="bindDateChange">
      <view class="input">{{date || '请选择日期'}}</view>
    </picker>
  </view>
  <view class="field">
    <text class="label">时间</text>
    <view class="time-container">
      <block wx:for="{{timeSlots}}" wx:key="time">
        <view class="time-slot {{selectedTime === item ? 'selected' : ''}}" bindtap="selectTime" data-time="{{item}}">
          {{item}}
        </view>
      </block>
    </view>
  </view>
  <button class="button" bindtap="bookCourse">确定预约</button>
</view>
