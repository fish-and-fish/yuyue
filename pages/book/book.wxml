<view class="container">
  <view class="section">
    <text>老师</text>
    <picker mode="selector" range="{{teachers}}" bindchange="bindTeacherChange">
      <view class="picker">
        {{teacherName || '请选择老师'}}
      </view>
    </picker>
  </view>

  <view class="section">
    <text>日期</text>
    <picker mode="date" bindchange="bindDateChange">
      <view class="picker">
        {{date || '请选择日期'}}
      </view>
    </picker>
  </view>

  <view class="section">
    <text>时间</text>
    <picker mode="time" start="08:00" end="20:00" bindchange="bindTimeChange">
      <view class="picker">
        {{time || '请选择时间'}}
      </view>
    </picker>
  </view>

  <button bindtap="submitBooking">确定预约</button>
</view>
