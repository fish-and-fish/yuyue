/* pages/courseBooking/courseBooking.wxss */
.container {
  padding: 20px;
}
.course-image {
  width: 100%;
  height: 200px;
  margin-bottom: 20px;
}
.course-name {
  font-size: 24px;
  margin-bottom: 20px;
}
.picker {
  margin-bottom: 20px;
  padding: 10px;
  border: 1px solid #ccc;
}
.time-slots {
  display: flex;
  flex-wrap: wrap;
}
.time-slot {
  width: 30%;
  padding: 10px;
  margin: 5px;
  border: 1px solid #ccc;
  text-align: center;
}
.time-slot.selected {
  background-color: #007aff;
  color: white;
}
