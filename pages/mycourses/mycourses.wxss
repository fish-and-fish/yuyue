page {
  display: flex;
  flex-direction: column;
  background-color: #f8f8f8;
}

.container {
  flex: 1;
  padding: 20px;
}

.tabs {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20px;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 10px 0;
  font-size: 16px;
  border-bottom: 2px solid transparent;
}

.tab.selected {
  border-bottom: 2px solid #000;
}

.course-list {
  display: flex;
  flex-direction: column;
}

.course-item {
  background-color: #fff;
  padding: 15px;
  margin-bottom: 10px;
  border-radius: 8px;
  display: flex;
  flex-direction: column;
}

.course-date {
  font-size: 18px;
  margin-bottom: 5px;
}

.course-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.course-name {
  font-size: 16px;
}

.course-time {
  font-size: 16px;
  margin-right: 10px;
}

.cancel-btn {
  background-color: #00a699;
  color: #fff;
  border: none;
  padding: 5px 10px;
  border-radius: 5px;
}
